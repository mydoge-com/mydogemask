{
  "name": "mydogemask",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "./build.sh",
    "build-scripts": "webpack --config ./webpack.config.js",
    "start": "yarn dev",
    "lint": "next lint",
    "watch": "nodemon --exec \"yarn run build\"",
    "postinstall": "npx patch-package"
  },
  "dependencies": {
    "@mydogeofficial/dogecoin-js": "^0.1.0-beta.4",
    "@native-base/icons": "^0.0.11",
    "@native-base/next-adapter": "^1.1.9",
    "bip32": "2.0.4",
    "bip39": "^3.0.4",
    "bitcoinjs-lib": "4.0.5",
    "bitcore-lib-doge": "https://github.com/mydoge-com/bitcore-lib-doge",
    "bn.js": "=5.2.1",
    "crypto-js": "^4.1.1",
    "dayjs": "^1.11.7",
    "dotenv": "^16.4.5",
    "expo-font": "^10.0.3",
    "ky": "^0.33.1",
    "multicoin-address-validator": "0.5.10",
    "native-base": "3.4.0",
    "next": "12.0.4",
    "qrcode": "1.5.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.7.1",
    "react-native": "^0.67.3",
    "react-native-safe-area-context": "^4.1.2",
    "react-native-svg": "^12.1.1",
    "react-native-tab-view": "^3.5.2",
    "react-native-web": "^0.17.7",
    "react-native-web-linear-gradient": "^1.1.2",
    "react-no-ssr": "^1.1.0",
    "satoshi-bitcoin": "1.0.5",
    "secure-ls": "^1.2.6",
    "timeago-react": "^3.0.5",
    "whatwg-mimetype": "^4.0.0",
    "wretch": "^2.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.6",
    "@babel/eslint-parser": "^7.24.6",
    "@babel/plugin-proposal-optional-chaining": "7.18.9",
    "babel-loader": "8.3.0",
    "babel-plugin-transform-inline-environment-variables": "0.4.4",
    "babel-preset-expo": "^8.5.1",
    "eslint": "7",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-next": "12.0.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-native": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "next-compose-plugins": "^2.2.1",
    "next-fonts": "^1.5.1",
    "next-transpile-modules": "^9.0.0",
    "node-polyfill-webpack-plugin": "^3.0.0",
    "nodemon": "^2.0.20",
    "prettier": "2.7.1",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "watch": {
    "build": {
      "extensions": "js,jsx,css,scss",
      "patterns": "./",
      "ignore": [
        "node_modules",
        "build",
        "./scripts/compiled",
        "./scripts/node_modules",
        "out",
        ".next",
        "./*.log"
      ],
      "verbose": true,
      "delay": 1000
    }
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/**",
      "build/**",
      "scripts/compiled/**",
      "scripts/node_modules/**",
      "out/**",
      ".next/**",
      "**.log"
    ],
    "delay": 500
  }
}
